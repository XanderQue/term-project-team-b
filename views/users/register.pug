extends ../layouts/layout

block content

    h1 Register

    form.form-horizontal(action='/users/register', method='post')
        .form-group
            label.col-sm-2.control-label(for='email') Email
            .col-sm-5
                input#email.form-control(type='email', name='email', placeholder='Email')
        .form-group
            label.col-sm-2.control-label(for='password') Password
            .col-sm-5
                input#password.form-control(type='password', name='password', placeholder='Password')
        .form-group
            label.col-sm-2.control-label(for='name') Name
            .col-sm-5
                input#name.form-control(type='string', name='name', placeholder='Name')
        .form-group
            .col-sm-offset-2.col-sm-5
                button.btn.btn-default(type='submit') Create Account

